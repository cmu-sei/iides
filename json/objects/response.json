    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "TODO",
        "pattern": "^reponse--[UUIDv4]"
      },
      "technical_controls": {
        "type": "array",
        "description": "TODO",
        "prefixItems": [
          { "type": "string" },
          { "type": "date" },
          { "$ref": "#/$defs/technical-control-vocab"}
        ],
        "minItems": 2,
        "items": false
      },
      "behavioral_controls": {
        "type": "array",
        "description": "TODO",
