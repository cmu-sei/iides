{
    "$id": "[REPLACE with full github url to this json file]",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Job",
    "description": "Details of the employment relationship between an individual and an organization.",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "A unique string that begins with \"job--\" and is appended with a UUIDv4.",
            "pattern": "^job--[UUIDv4]"
        },
        "job_function": {
            "type": "string",
            "description": "Functional category of the individual's job.",
            "$ref": "#/$defs/job-function-vocab"
        },
        "occupation": {
            "type": "string",
            "description": "TODO",
            "$ref": "#/$defs/occupation-vocab"
        },
        "title": {
            "type": "string",
            "description": "The individual's job title. If title is specified, occupation should be as well."
        },
        "position_technical": {
            "type": "boolean",
            "description": "The individual had access to technical areas of the organization during the incident (e.g. IT admin, network engineer, help desk associate, etc.)"
        },
        "access_authorization": {
            "type": "string",
            "description": "TODO",
            "$ref": "#/$defs/access-auth-vocab"
        },
        "employment_type": {
            "type": "string",
            "description": "The individual's employment arangement at the time of the incident.",
            "$ref": "#/$defs/employment-type-vocab"
        },
        "hire_date": {
            "type": "string",
            "format": "date",
            "description": "Date the individual is hired into this position."
        },
        "departure_date": {
            "type": "string",
            "format": "date",
            "description": "Date the individual departed from this position."
        },
        "tenure": {
            "type": "string",
            "format": "timedelta",
            "description": "The amount of time the individual spent in this particular job role."
        },
        "comment": {
            "type": "string",
            "description": "Clarifying comments or details about the job or the individual's employment with the organization."
        }
    },
    "required": [
        "id"
    ],
    "dependentRequired": {
        "occupation": ["job_function"],
        "title": ["occupation"]
      },
