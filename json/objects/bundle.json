{
    "$id": "file:///C:/users/nammerman/BitBucket/pyiides/json/objects/bundle.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Bundle",
    "description": "A bundle holds the objects relating an incident, i.e. court cases, insider, targets and impacts.",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "A unique identifier for the bundle",
            "pattern": "^bundle--[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$"
        },
        "objects": {
            "type": "array",
            "items": {
                "anyOf": [
                    { "$ref": "accomplice.json" },
                    { "$ref": "charge.json" },
                    { "$ref": "court-case.json" },
                    { "$ref": "detection.json" },
                    { "$ref": "impact.json" },
                    { "$ref": "incident.json" },
                    { "$ref": "insider.json" },
                    { "$ref": "job.json" },
                    { "$ref": "legal-response.json" },
                    { "$ref": "note.json" },
                    { "$ref": "organization.json" },
                    { "$ref": "person.json" },
                    { "$ref": "response.json" },
                    { "$ref": "sentence.json" },
                    { "$ref": "source.json" },
                    { "$ref": "sponsor.json" },
                    { "$ref": "stressor.json" },
                    { "$ref": "target.json" },
                    { "$ref": "ttp.json" }
                ]
            }
        }
    },
    "required": ["id", "objects"]
}